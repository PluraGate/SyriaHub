{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "redirects": [
    {
      "source": "/",
      "destination": "/en",
      "permanent": false
    },
    {
      "source": "/feed",
      "destination": "/insights",
      "permanent": true
    },
    {
      "source": "/:locale/feed",
      "destination": "/:locale/insights",
      "permanent": true
    },
    {
      "source": "/research-outcomes",
      "destination": "/research-gaps",
      "permanent": true
    },
    {
      "source": "/:locale/research-outcomes",
      "destination": "/:locale/research-gaps",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/fonts/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/api/(posts|tags|citations)/(.*)?",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=60, stale-while-revalidate=300"
        },
        {
          "key": "Vary",
          "value": "Authorization, Cookie"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/correspondence/cron",
      "schedule": "*/5 * * * *"
    }
  ]
}