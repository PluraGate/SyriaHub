        "questions": {
            "whatIsSyrealize": {
                "q": "What is Syrealize?",
                "a": "Syrealize is a collaborative research platform designed for sharing knowledge, conducting research, and connecting with scholars worldwide. We provide tools for writing, peer review, and community engagement."
            },
            "howToJoin": {
                "q": "How do I join Syrealize?",
                "a": "Syrealize operates on an invitation system. You need an invitation code from an existing member to create an account. This helps us maintain a quality community of genuine researchers."
            },
            "whatCanIPost": {
                "q": "What can I post on Syrealize?",
                "a": "You can share research articles, ask questions, answer community questions, share resources like datasets and tools, and create events. All content should contribute to knowledge sharing."
            },
            "howModeration": {
                "q": "How does content moderation work?",
                "a": "New posts go through a review process. Our moderators check for quality, accuracy, and adherence to community guidelines. The community can also flag content that violates our policies."
            },
            "canIEdit": {
                "q": "Can I edit my posts after publishing?",
                "a": "Yes, you can edit your posts at any time. All edits are tracked in version history, maintaining transparency and accountability."
            },
            "whatAreRoles": {
                "q": "What are the different user roles?",
                "a": "We have four roles: Members can participate in discussions, Researchers can publish content, Moderators help maintain community standards, and Administrators manage the platform."
            },
            "howToBecome": {
                "q": "How do I become a Researcher?",
                "a": "Members can apply for Researcher status. Your application will be reviewed based on your contributions, expertise, and adherence to community guidelines."
            },
            "isContentFree": {
                "q": "Is the content on Syrealize free to access?",
                "a": "Yes, all published content is freely accessible. Authors retain their rights and can choose appropriate licenses for their work."
            }
        }
    },
